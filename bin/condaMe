#!/bin/bash

rm -rf *egg*
rm -rf dist/uclcodebase*
here=`pwd`

echo "--------------------"
echo "# conda config"
echo "--------------------"
conda config --set anaconda_upload yes

echo "--------------------"
echo "# conda build"
echo "--------------------"

cd ..
conda-build uclcodebase_core

echo "--------------------"
echo "# conda install -c proflewis uclcodebase"
echo "--------------------"
conda install -c proflewis uclcodebase --yes

echo "--------------------"
echo "# conda upgrade -c proflewis uclcodebase"
echo "--------------------"
conda upgrade -c proflewis uclcodebase --yes

echo "--------------------"
echo "# conda install -c conda-forge jupyter_contrib_nbextensions"
echo "--------------------"
conda install -c conda-forge jupyter_contrib_nbextensions --yes

echo "--------------------"
echo "# conda upgrade -c conda-forge jupyter_contrib_nbextensions"
echo "--------------------"
conda upgrade -c conda-forge jupyter_contrib_nbextensions --yes

cd "${here}"
bash postBuild
conda build purge


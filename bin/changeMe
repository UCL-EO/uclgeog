#!/bin/bash
# change all references from in to out
# doesnt change directory names at present

export old=uclgeog_msc_core
export new=`basename "$PWD"`

for i in "$@"
do
case $i in
  -o|--old)
    export old="$2"
    shift # past argument=value
    shift # past value
    ;;
  -n|--new)
    export new="$2"
    shift # past argument=value
    shift # past value
    ;;
  --help) 
    echo "${0}: scan local files and replace old field with new"
    echo "${0} [-o|--old] [-n|--new]"
    echo "-o|--old  : name to be replaced in files"
    echo "-n|--new  : name to replace into files"
    exit 0
    shift # past argument=value
    ;;
    *)
          # unknown option 
    ;; 
esac
done


grep $old .???* * */* | grep -v Binary | grep -v build | grep -v egg-info > /tmp/x.$$
export xdir=/tmp/xdir.$$
mkdir -p $xdir
echo $old

x=`cat /tmp/x.$$| awk -F: '{x[$1]=$1} END{for(i in x)print i}'`

mv $old $new

for f in $x; do
  in=`basename $f`
  out=$f
  echo '**' $in ':->' $out
  cp $f $xdir
  sed < $xdir/$in 's/'${old}'/'${new}'/g' > $out
done
rm -rf /tmp/x.$$ $xdir


